<% content_for @title = @course.title %>


<div class="container-sm">
  <div class="row mt-6">
    <div class="col-12 col-md-6 col-lg-6">
      <!-- card course-->
      <div class="card ">
        <!-- title!-->
        <h1 class="text-xl leading-tight font-bold mt-2 mx-2">
            <%= @course.title %>
        </h1>

         <!-- avatar data/!-->
        <div class="flex items-cente mt-4 ml-6">
          <img class="w-10 h-10 bg-gray-400 rounded-full">
          <!-- Course meta data-->
          <%= render "courses/shared/course_data" %>
        </div>

        <!--content/!-->
        <div class="m-2">
          <p class="mx-2" id="read_more">
            <%= @course.content.to_s.html_safe %>
          </p>
          <hr>
          <!-- Options-->
          <%= render "courses/shared/options" %>
        </div>
      </div>
    </div>
    <%= render "courses/shared/exercice" %>
  </div>
</div>

